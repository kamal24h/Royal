@using RoyalEstate.Web.Startup
@model RoyalEstate.Web.Models.Estates.EstateListViewModel

@{
    ViewBag.Title = L("Estates");

    //Matches with the menu name in SimpleTaskAppNavigationProvider to highlight the menu item
    ViewBag.ActiveMenu = PageNames.Estates;
}



@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Estates/Index.js" asp-append-version="true"></script>
    </environment>

    @*<environment names="Staging,Production">
        <script src="~/view-resources/Views/Estates/Index.min.js" asp-append-version="true"></script>
    </environment>*@
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("EstateType")</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#EstateTypeCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Estates/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="EstateTypeTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("Name")</th>                                        
                                        <th>@L("IsActive")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Estates/_CreateModal.cshtml", Model)

<div class="modal fade" id="EstateTypeEditModal" tabindex="-1" role="dialog" aria-labelledby="EstateTypeEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>



